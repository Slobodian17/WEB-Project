{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb-base"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "ignorePatterns": ["node_modules/", "gulpfile.js"],
  "rules": {
    "no-useless-concat": "off",
    "indent": ["warn", 4],
    "linebreak-style": "off",
    "quotes": ["warn", "double"],
    "semi": ["warn", "always"],
    "no-console": "warn",
    "no-const-assign": "error",
    "no-dupe-args": "error",
    "no-dupe-keys": "error",
    "no-duplicate-imports": "error",
    "no-unused-vars": "warn",
    "no-eq-null": "error",
    "no-lonely-if": "warn",
    "no-shadow": "error",
    "prefer-const": "warn",
    "prefer-destructuring": "warn",
    "require-await": "warn",
    "comma-dangle": "off",
    "jsx-quotes": ["warn", "prefer-double"],
    "import/order": [
      "warn",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index",
          "object",
          "type"
        ],
        "newlines-between": "always-and-inside-groups"
      }
    ],
    "no-multiple-empty-lines": "warn",
    "import/no-unresolved": "off"
//
//    "quotes": ["warn", "double"],
//    "indent": [
//      "error",
//      4
//    ],
//    "linebreak-style": "off"
  }
}